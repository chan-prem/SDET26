        <configuration>
          <suiteXmlFiles>
            <suiteXmlFile>testng_Group.xml</suiteXmlFile>
          </suiteXmlFiles>
        </configuration>
    </plugin>
    </plugins>
	</pluginManagement>
	</build>  
  </profile>
  
